<%= stylesheet_link_tag "task" %>
<div style="margin-left:20px">
  <h1 style="margin-top:-60px">Tasks</h1>
  <div id="tasks">
    <% if @task.empty? %>
      <div class="no-tasks">
        <h1>No tasks created</h1>
      </div>
    <% else %>
      <% @task.each do |tasks| %>
        <div class="task">
          <%= render tasks %>
          <p>
            <%= link_to "Edit", edit_task_path(tasks.id) , class: "btn btn-primary" %>
            <%= link_to "Delete", tasks, data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this task?"  }  , class: "btn btn-primary" %>
          </p>
        </div>
        <br />
      <% end %>
    <% end %>
  </div>
  <p><%= link_to "Back", home_admin_path(@admin) ,class:"btn btn-primary" %></p>
</div>
