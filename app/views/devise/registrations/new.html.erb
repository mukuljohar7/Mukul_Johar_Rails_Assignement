<%= stylesheet_link_tag "admin_sign" %>
<div class="card"">
  <div class="card-body">
    <h5 class="card-title">Sign up</h5>
    <p class="card-text"><%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="field">
          <%= f.label :name %><br />
          <%= f.text_field :name, autofocus: true, class:"field" %>
        </div>
        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"field" %>
        </div>
        <div class="field">
          <%= f.label :password %>
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password" , class:"field" %>
        </div>
        <div class="field">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"field"%>
        </div>
        <div>
          <%= f.label :profile_image %><br />
          <%= f.file_field :profile_image %>
        </div>
        <br />
        <div class="actions">
          <%= f.submit "Sign up", class:"btn btn-primary"%>
        </div>
        <br />
      <% end %>
      <a href="/" class="btn btn-primary" >Back to home page<a></p>
        <%= render "devise/shared/links" %></p>
    </div>
  </div>
